package com.loop;

public class whileLoopTestMain {

	public static void main(String[] args) {

		System.out.println("Loop Start--");

		display(1);
		display(2);
		display(3);
		display(4);

		System.out.println("******");

		boolean flag = true;

		while (flag) {

			System.out.println("inside the loop 1--");
		}
		System.out.println("******");

		int i = 1;
		while (i <= 1) {
			display(i);
			i++;

			boolean flag1 = false;
			while (flag1) {
				System.out.println("inside the while loop--");
			}
			do {
				System.out.println("inside the do while loop--");
			} while (flag1);

			System.out.println("Loop end--");
		}
		
		public static void display(int i) {
			System.out.println("current number is :I:"+i);
		}
	}

}
